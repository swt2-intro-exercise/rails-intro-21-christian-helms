<h1>Authors</h1>

<table>
	<thead>
		<th>Full name</th>
		<th>Homepage</th>
		<th>Details page</th>
		<th>Edit page</th>
		<th>Delete author</th>
	</thead>
	<% @authors.each do |author| %>
		<tr>
			<td><%= author.name %></td>
			<td><a href="<%= author.homepage %>"><%= author.homepage %></a></td>
			<td><a href="/authors/<%= author.id %>">visit</a></td>
			<td><%= link_to "edit", edit_author_path(author) %></td>
			<td><%= link_to("delete", author_path(author), method: :delete) %></td>
		</tr>
	<% end %>
</table>
<br>
<%= link_to("Create Author", new_author_path) %>
